{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    // "ES6", "ES2015": support for basic ESM features
    // "ES2020": additionally support for dynamic imports and `import.meta`.
    "module": "ES2020",

    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    // In order to import a legacy CommonJS module
    "allowSyntheticDefaultImports": true,
    "declaration": true,
  },
  "include": ["src/**/*"]
}
